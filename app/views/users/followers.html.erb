<%= render 'layouts/header'%>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
     
      <h1><%= @user.name %></h1>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stat' %>
     
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
          <%= @users.each do|user|%>
            <li><%= @user.followers%></li>
          <% end%>
      </ul>
      <%= paginate @users %>
    <% end %>
  </div>
</div>